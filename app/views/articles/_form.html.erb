<%= render 'shared/errors', obj: @article %>

<div class='row'>

<div class='col-xs-12'>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>



<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :Address %>

</div>

<div class="col-sm-8">

<%= f.text_field :title, class: "form-control", placeholder: "Enter project address", autofocus: true %>

</div>

</div>



<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :Project_Description %>

</div>

<div class="col-sm-8">

<%= f.text_area :description, rows: 7, class: "form-control", placeholder: "Enter project description, e.g. Additions and alterations to existing dwelling, Two new townhouses, etc" %>

</div>

</div>



<div class="form-group">

<div class="row">

<div class="col-sm-offset-2 col-sm-8">

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>

</div>

</div>

</div>



<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

<div class="col-xs-4 col-xs-offset-4">

[ <%= link_to "Cancel request and return to project listing", user_path(current_user) %> ]

</div>

</div>

</div>